<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:text="Cerrar Sesión" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnArbol1"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:text="Nuevo Árbol" />

        <Button
            android:id="@+id/btnOpciones1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..." />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnArbol2"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:text="Nuevo Árbol" />

        <Button
            android:id="@+id/btnOpciones2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..." />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnArbol3"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:text="Nuevo Árbol" />

        <Button
            android:id="@+id/btnOpciones3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..." />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:textSize="20dp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/lblCorreo"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Correo" />

    <TextView
        android:id="@+id/lblUID"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Id"
        android:textSize="20dp" />
</LinearLayout>