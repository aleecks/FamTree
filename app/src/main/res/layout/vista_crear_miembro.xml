<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CrearMiembro">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#20000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="317dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/black"
            android:fontFamily="@font/pretty_trees"
            android:gravity="center"
            android:text="1/4 Pareja de Bisabuelos"
            android:textColor="#B9FFFFFF"
            android:textSize="31sp" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="355dp"
            android:layout_height="598dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/style_scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblMiembro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/tree_ftr"
                    android:text="1º Miembro"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <!-- <ImageView
                    android:id="@+id/btnImg1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/ic_menu_camera"
                    tools:ignore="SpeakableTextPresentCheck" /> -->

                <EditText
                    android:id="@+id/txtNombre1"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autofillHints=""
                    android:background="@drawable/style_input_miembro"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtApellido1.1"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autofillHints=""
                    android:background="@drawable/style_input_miembro"
                    android:ems="10"
                    android:hint="Primer Apellido"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtApellido1.2"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autofillHints=""
                    android:background="@drawable/style_input_miembro"
                    android:ems="10"
                    android:hint="Segundo Apellido"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tree_ftr"
                        android:text="Elegir fecha de nacimiento"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/btnNacimiento1"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        tools:ignore="SpeakableTextPresentCheck" />
                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tree_ftr"
                        android:text="Elegir fecha de defunción"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/btnDefuncion1"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.gridlayout.widget.GridLayout>

                <TextView
                    android:id="@+id/lblMiembro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="65dp"
                    android:fontFamily="@font/tree_ftr"
                    android:text="2º Miembro"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <!-- <ImageView
                    android:id="@+id/btnImg2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@android:drawable/ic_menu_camera"
                    tools:ignore="SpeakableTextPresentCheck" /> -->

                <EditText
                    android:id="@+id/txtNombre2"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autofillHints=""
                    android:background="@drawable/style_input_miembro"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtApellido2.1"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autofillHints=""
                    android:background="@drawable/style_input_miembro"
                    android:ems="10"
                    android:hint="Primer Apellido"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <EditText
                    android:id="@+id/txtApellido2.2"
                    android:layout_width="272dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:autofillHints=""
                    android:background="@drawable/style_input_miembro"
                    android:ems="10"
                    android:hint="Segundo Apellido"
                    android:inputType="textPersonName"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tree_ftr"
                        android:text="Elegir fecha de nacimiento"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/btnNacimiento2"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.gridlayout.widget.GridLayout>

                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tree_ftr"
                        android:text="Elegir fecha de defunción"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/btnDefuncion2"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="12dp"
                        android:background="@android:drawable/ic_menu_my_calendar"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/style_scroll_view"
            android:fontFamily="@font/tree_ftr"
            android:text="Siguiente"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>