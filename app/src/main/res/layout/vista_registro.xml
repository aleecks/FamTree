<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio.Registro">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AE000000"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="125dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/volver"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/btnImg"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            tools:ignore="SpeakableTextPresentCheck"
            tools:srcCompat="@drawable/camera" />

        <EditText
            android:id="@+id/editTxtNombre"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="66dp"
            android:background="@drawable/style_input"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/style_input"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/editTxtPass1"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/style_input"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/editTxtPass2"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/style_input"
            android:ems="10"
            android:hint="Repite la Contraseña"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="246dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/style_btn_registro"
            android:text="Registrarse" />

    </LinearLayout>

</RelativeLayout>