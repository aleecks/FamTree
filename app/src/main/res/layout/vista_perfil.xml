<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MostrarPerfil">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6F000000"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/volver_verde"
                android:layout_marginLeft="10dp"
                app:layout_column="0"
                app:layout_row="0" />

            <Button
                android:id="@+id/btnLogOut"
                android:layout_width="143dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="139dp"
                android:background="@drawable/style_btn_home_1"
                android:text="Cerrar SesiÃ³n"
                android:textColor="@color/black" />
        </androidx.gridlayout.widget.GridLayout>

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="176dp"
            android:layout_height="142dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            tools:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Nombre"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/lblCorreo"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:gravity="center"
            android:text="Correo"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>