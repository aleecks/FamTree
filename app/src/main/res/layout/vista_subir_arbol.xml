<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubirArbol">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background5" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:fontFamily="@font/pretty_trees"
        android:gravity="center"
        android:text="Tu informaciÃ³n"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="591dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="115dp"
        android:background="@drawable/style_scroll_view"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/camera"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="278dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:autofillHints=""
            android:background="@drawable/style_input_miembro"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/txtApellido1"
            android:layout_width="278dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:autofillHints=""
            android:background="@drawable/style_input_miembro"
            android:ems="10"
            android:hint="Primer Apellido"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/txtApellido2"
            android:layout_width="278dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:autofillHints=""
            android:background="@drawable/style_input_miembro"
            android:ems="10"
            android:hint="Segundo Apellido"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tree_ftr"
                android:text="Elegir fecha de nacimiento"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnFecha"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:background="@android:drawable/ic_menu_my_calendar"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnSubir"
        android:layout_width="246dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="740dp"
        android:fontFamily="@font/tree_ftr"
        android:textSize="25sp"
        android:background="@drawable/style_scroll_view"
        android:text="Crear Arbol" />
</RelativeLayout>